{
  "name": "Improved ITC-LMS",
  "description": "Extension for ITC-LMS on Google Chrome",
  "version": "2.0.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://itc-lms.ecc.u-tokyo.ac.jp/lms/timetable*",
        "https://utol.ecc.u-tokyo.ac.jp/lms/timetable*"
      ],
      "js": ["src/main.js"],
      "css": ["style/tasklist.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "src/options/options.html",
  "permissions": ["storage"]
}
